<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="estate_propert_location_view_form" model="ir.ui.view">
            <field name="name">estate.property.location.form</field>
            <field name="model">estate.property.location</field>
            <field name="arch" type="xml">
                <form string="Estate Property Location">
                    <sheet>
                        <div class="oe_title mb-3">
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                        <group name="address">
                            <!-- <div class="o_address_format"> -->
                            <group name="streets">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                            </group>
                            <group name="cities">
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                            </group>
                            <!-- </div> -->
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="estate_property_location_view_tree" model="ir.ui.view">
            <field name="name">estate.property.location.list</field>
            <field name="model">estate.property.location</field>
            <field name="arch" type="xml">
                <list string="Estate Property Location">
                    <field name="sequence" widget="handle"/>
                    <field name="name" string="Name"/>
                </list>
            </field>
        </record>
    </data>
</odoo>

