<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <!-- avaiable is the name of the filter at estate.property search view -->
        <field name="context">{'search_default_available': True}</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="estate_property_tag_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offer</field>
        <field name="res_model">estate.property.offer</field>
        <!-- This select only related property type -->
        <field name="domain">[('property_type_id', '=', active_id)]</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="estate_property_location_action" model="ir.actions.act_window">
        <field name="name">Property Location</field>
        <field name="res_model">estate.property.location</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="estate_menu_root" name="Real Estate"/>

    <menuitem id="estate_property_menu" name="Advertisements" parent="estate_menu_root"/>
    <menuitem id="estate_property_action_menu" action="estate_property_action" parent="estate_property_menu"/>

    <menuitem id="estate_property_type_menu" name="Settings" parent="estate_menu_root"/>
    <menuitem id="estate_property_type_action_menu" action="estate_property_type_action" parent="estate_property_type_menu"/>
    <menuitem id="estate_property_tag_action_menu" action="estate_property_tag_action" parent="estate_property_type_menu"/>
    <menuitem id="estate_property_location_action_menu" action="estate_property_location_action" parent="estate_property_type_menu"/>

</odoo>
